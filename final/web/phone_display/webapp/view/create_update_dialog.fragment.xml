<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout" >
   <Dialog
      id="createUpdateDialog"
      title="Enter Phone Info">
      <l:VerticalLayout>
         <l:content>
            <Label text="Brand name" labelFor="brandNameInput" class="sapUiSmallMarginBeginEnd" />
            <Input id="brandNameInput" width="300px" required="true" class="sapUiSmallMarginBeginEnd"/>
            <Label text="Model name" labelFor="modelNameInput" class="sapUiSmallMarginBeginEnd"/>
            <Input id="modelNameInput" width="300px" required="true" class="sapUiSmallMarginBeginEnd"/>
         </l:content>
      </l:VerticalLayout>
      <beginButton>
         <Button
            text="OK"
            press="createPhone"/> 
      </beginButton>
      <endButton>
      <Button
            text="Cancel"
            press="onCloseDialog"/> 
      </endButton>
   </Dialog>
</core:FragmentDefinition>
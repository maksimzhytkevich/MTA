<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout" >
   <Dialog
      id="createUpdateDialog"
      title="{i18n>dialogTitle}">
      <l:VerticalLayout>
         <l:content>
            <Label text="{i18n>dialogLabelBrand}" labelFor="brandNameInput" class="sapUiSmallMarginBeginEnd" />
            <Input id="brandNameInput" width="300px" required="true" class="sapUiSmallMarginBeginEnd"/>
            <Label text="{i18n>dialogLabelModel}" labelFor="modelNameInput" class="sapUiSmallMarginBeginEnd"/>
            <Input id="modelNameInput" width="300px" required="true" class="sapUiSmallMarginBeginEnd"/>
         </l:content>
      </l:VerticalLayout>
      <beginButton>
         <Button
            id="bt_ok"
            text="{i18n>btOK}"/> 
      </beginButton>
      <endButton>
      <Button
            text="{i18n>btCancel}"
            press="onCloseDialog"/> 
      </endButton>
   </Dialog>
</core:FragmentDefinition>